{% extends 'main-metronic.html.twig' %}

{% block title %}Return proccess{% endblock %}
{% block stylesheet %}
            
    <link href="{{asset('/')}}assets/css/timeline.css" type="text/css" rel="stylesheet"/>

{% endblock %}
{% block content %}
<div class="container">
    <div class="row mt-5">
        <div class="col-lg-7 mb-3">
             <div class="card">
                 <div class="card-header pt-8">
                    <h5 class="text-dark">Proccess of return </h5>
                </div>
                <div class="card-body">
                    <div id="content">
                    <p>ID: # {{return.getId()}}<br> Referntie: {{return.getReference()}}</p>
                        <ul class="timeline">
                        {% for pr in proccess %}
                            <li class="event" data-date="{{pr.getCreatedAt()|date('Y-m-d H:i:s')}}">
                                <h3>{{ loop.index }}. {{pr.getStatus().getName()}}</h3>
                                
                            </li>
                           {% endfor %}
                       
                          
                        </ul>
                    </div>
                  
            </div>
        </div>
    </div>
    
</div>
</div>

{% endblock %}