{% extends 'main-metronic.html.twig' %}

{% block title %}Reason settings{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
     <div class="col-lg-8">
            <div class="card">
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <span class="kt-portlet__head-icon btn-back-wrapper">
                        <a href="/settings/edit" class="btn btn-label-brand btn-bold btn-icon btn-back"><svg class="svg-inline--fa fa-chevron-left fa-w-10" aria-hidden="true" focusable="false" data-prefix="fa" data-icon="chevron-left" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" data-fa-i2svg=""><path fill="currentColor" d="M34.52 239.03L228.87 44.69c9.37-9.37 24.57-9.37 33.94 0l22.67 22.67c9.36 9.36 9.37 24.52.04 33.9L131.49 256l154.02 154.75c9.34 9.38 9.32 24.54-.04 33.9l-22.67 22.67c-9.37 9.37-24.57 9.37-33.94 0L34.52 272.97c-9.37-9.37-9.37-24.57 0-33.94z"></path></svg><!-- <i class="fa fa-chevron-left"></i> Font Awesome fontawesome.com --></a>
                        </span>
                        <h3 class="kt-portlet__head-title">Retour - Reasons
                        </h3>
                    </div>
                </div>
            </div>
               
               <div class="card body p-2">
                    <form action="{{asset('/reason/settings/add')}}" method="POST">
                    
                    <div id="andjica">
                     {% for i in 0..5 %}
                        <div class="input-group group-list" name="andjica[{{i}}]">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">Reason {{i+1}}</span>
                            </div>
                            <input type="text" class="form-control" name="reasons[]" placeholder="">
                            <div class="form-check ml-5">
                                <input class="form-check-input" type="checkbox" value="1" name="active[]" id="active" checked>
                            </div>
                        </div><br>
                      {% endfor %}
                        <div id="brrandjica">
                        
                       </div>
                       <div id="reason10" style="display:none">
                         <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">Reason 10</span>
                            </div>
                            <input type="text" class="form-control" name="" placeholder="Description field - standard option" disabled>
                            <div class="form-check ml-5">
                                <input class="form-check-input" type="checkbox" value="" name="" id="active" checked>
                            </div>
                        </div><br>
                        </div>
                      <a class="btn btn-block btn-sm btn-success mb-2" onClick="addInput();">Add new reasons</a>
                      <input type="submit" class="btn btn-success"  value="Save">
                    </form>
                </div>
             </div>
          </div>
    </div>
    </div>
</div>
<!-- And new reason with JS -->
<script>
   function addInput()
   {
       var count = document.getElementsByClassName("group-list").length;
      
       if(count <= 8)
       {
           count = count + 1;
            var text=` <div class="input-group group-list" name="">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">Reason `+count+` </span>
                            </div>
                            <input type="text" class="form-control" name="reasons[]" placeholder="">
                            <div class="form-check ml-5">
                                <input class="form-check-input" type="checkbox" value="1" name="active[]" id="active" checked>
                            </div>
                        </div><br>`;

            document.getElementById('brrandjica').innerHTML+=text;
            
          
       }
       else
       {
           document.getElementById('reason10').style.display="block";
       }
   }
</script>
{% endblock %}


  
