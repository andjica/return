{% extends 'main-metronic.html.twig' %}

{% block public_key %}New ReturnSettings{% endblock %}
{% block stylesheet %}
   <link href="{{asset('/assets/css/return.css')}}" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
<div class="container-xxl mt-17 pt-5">

{{include('/components/alert-message.html.twig')}}

<div class="row">
  <div class="col-lg-3 col-xl-2">
        {{include('/components/vertical-sidebar.html.twig')}}
    </div>
    <div class="col-lg-7">
    <div class="card">
     <div class="kt-portlet">
        <div class="kt-portlet__head">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon btn-back-wrapper">
                <a href="/settings/edit" class="btn btn-label-brand btn-bold btn-icon btn-back"><svg class="svg-inline--fa fa-chevron-left fa-w-10" aria-hidden="true" focusable="false" data-prefix="fa" data-icon="chevron-left" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" data-fa-i2svg=""><path fill="currentColor" d="M34.52 239.03L228.87 44.69c9.37-9.37 24.57-9.37 33.94 0l22.67 22.67c9.36 9.36 9.37 24.52.04 33.9L131.49 256l154.02 154.75c9.34 9.38 9.32 24.54-.04 33.9l-22.67 22.67c-9.37 9.37-24.57 9.37-33.94 0L34.52 272.97c-9.37-9.37-9.37-24.57 0-33.94z"></path></svg><!-- <i class="fa fa-chevron-left"></i> Font Awesome fontawesome.com --></a>
                </span>
                <h3 class="kt-portlet__head-title">Retour - Payment providers
                </h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            <div class="row mb-6 mt-2">
                <div class="col-lg-4 text-right">
                {{ form_label(form.image) }} 
                </div>
                <div class="col-lg-8">
                    <div class="image-input image-input-outline image-input-changed" data-kt-image-input="true" style="background-image: url('{{asset('/return_settings_images/blank.png')}}')">
                        <div class="image-input-wrapper w-125px h-125px" style="background-image: url('{{asset('/return_settings_images/blank.png')}}')"></div>
                        <label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" public_key="" data-bs-original-public_key="Insert logo">
                           <i class="fas fa-pen text-muted"></i>
                           {{ form_widget(form.image, {'required': 'required'}) }}
                        </label>
                    </div>
                    <small>{{ form_help(form.image) }}</small>
                    <div class="form-error col-lg-7 text-danger">
                    {{ form_errors(form.image) }}
                </div>
                </div>
            </div>
            
             <div class="row mb-6 mt-2">
               <div class="col-lg-4 text-right">
                    {{ form_label(form.public_key) }}
                </div>
                <div class="col-lg-8">
                    {{ form_widget(form.public_key) }}
                    <small>{{ form_help(form.public_key) }}</small>
                    <div class="form-error">
                        {{ form_errors(form.public_key) }}
                    </div>
                </div>
            </div>
            {% if category.getName() == "Stripe" %}
            <div class="row mb-6 mt-2">
               <div class="col-lg-4 text-right">
                    {{ form_label(form.secret_key) }}
                </div>
                <div class="col-lg-8">
                    {{ form_widget(form.secret_key) }}
                    <small>{{ form_help(form.secret_key) }}</small>
                    <div class="form-error">
                        {{ form_errors(form.secret_key) }}
                    </div>
                </div>
            </div>
            {% else %}
            {% endif %}
             <div class="row mb-6 mt-2">
                <div class="col-lg-4"></div>
                <div class="col-lg-8">
                    <button class="btn btn-success mt-3 btn-sm">{{ button_label|default('Save') }}</button>
                </div>
                </div>
            </div>
        {{ form_end(form, {'render_rest': false}) }}
        </div>
     </div>
    </div>
</div>
</div>
{% endblock %}
