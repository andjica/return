{% extends "user-template.html.twig" %}
{% block stylesheet %}
<link href="{{asset('/')}}assets/css/custom.css" rel="stylesheet" type="text/css">
{% endblock %}
{% block content %}
<div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mx-auto pt-5 justify-content-center text-align-center mobile-version">
                <div class="row">
                    <div class="col-lg-12 mx-auto text-center">
                        <img src="{{asset('/return_settings_images/')}}{{ imagelogo }}" width="130px" class='img-fluid mt-5 mobile-version-img mb-10'>
                    </div>
                </div>
                 <div class="card">
                    <div class="kt-portlet">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">
                                <h3 class="kt-portlet__head-title">Your information
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="card-body border rounded mt-2 shadow-sm">
                        <div class="row text-left m-0 mt-5 mb-3">
                            <div class="col-lg-5">Contactnaam:</div>
                            <div class="col">{{madedReturn.getClientName()}}</div>
                        </div>
                          <div class="row text-left m-0 mb-3">
                            <div class="col-lg-5">Email address:</div>
                            <div class="col">{{finduser.getEmail()}}</div>
                        </div>
                         <div class="row text-left m-0 mb-3">
                            <div class="col-lg-5">Bedrijf:</div>
                            <div class="col">{{madedReturn.getCompanyName()}}</div>
                         </div>
                         <div class="row text-left m-0 mb-3">
                            <div class="col-lg-5">Adres:</div>
                            <div class="col">
                                <img src="{{asset('/')}}build/countries/nl.svg" width="15px" class="img-fluid"> {{country.getName()}}<br>
                                {{finduser.getCity()}} {{finduser.getPostalCode()}}<br>
                                {{madedReturn.getStreet()}} {{finduser.getHouseNumber()}}
                            </div>
                           
                        </div>
                    </div>
                    
                </div>
                <div class="card">
                    <div class="kt-portlet">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">
                                <h3 class="kt-portlet__head-title">Your return information
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="card-body border rounded mt-2 shadow-sm">
                        <div class="row text-left m-0 mt-5 mb-3">
                            <div class="col-lg-5">Order id:</div>
                            <div class="col">{{madedReturn.getWebshopOrderId()}}</div>
                         </div>
                         <div class="row text-left m-0 mb-3">
                            <div class="col-lg-5">Title of item for returning:</div>
                            <div class="col">{{madedReturn.getItem().getTitle()}}</div>
                        </div>
                         <div class="row text-left m-0 mb-3">
                            <div class="col-lg-5">Reason for returning item:</div>
                            <div class="col">{{madedReturn.getReason()}}</div>
                        </div>
                        <div class="row text-left m-0 mb-3">
                            <div class="col-lg-5">Quantity for returning:</div>
                            <div class="col">{{madedReturn.getReturnQuantity()}}</div>
                        </div>
                    </div>
                 </div>
                 <div class="card">
                    <div class="kt-portlet">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">
                                <h3 class="kt-portlet__head-title ml-0">Information about return shipment address
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="card-body border rounded mt-2 shadow-sm">
                        <div class="row text-left m-0 mt-5 mb-3">
                            <div class="col-lg-3">Country:</div>
                            <div class="col"><img src="{{asset('/')}}build/countries/nl.svg" width="15px" class="img-fluid"> {{returninfo.country.getName()}}</div>
                           
                        </div>
                         <div class="row text-left m-0 mb-3">
                            <div class="col-lg-3">Address:</div>
                            <div class="col">{{returninfo.getCityName()}} {{returninfo.getPostCode()}}
                            <br>{{returninfo.getStreet()}} {{returninfo.getHouseNumber()}}</div>
                           
                        </div>
                        
                    </div>
                    
                </div>
                <div class="card">
                    <div class="kt-portlet">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">
                                <h3 class="kt-portlet__head-title ml-0">Your generetaded shipment label
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="card-body mb-5">
                        <a href="{{shipmentLabel}}" class="btn btn-info border p-2 btn-lg mt-5" target="blank">Your label - download</a>

                    </div>
                   
                </div>
            </div>
             <div class="col-lg-3">
                <div class="cover cover-background" style="background: url('{{asset('/return_settings_images/')}}{{ imagebackground }}');"></div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
<script>
   $('.download').on('click', function(){
    alert(5);
   });
</script>
{% endblock %}